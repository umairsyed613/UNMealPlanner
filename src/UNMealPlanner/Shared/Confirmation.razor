@inject IModalService ModalService

<div class="d-flex flex-column m-2">

    <div>@Message</div>
    <div class="d-flex justify-content-end mt-2">
        <button class="btn btn-primary mr-2" @onclick="Yes">Yes</button>
        <button class="btn btn-primary" @onclick="No">No</button>
    </div>
</div>

@code {

    [CascadingParameter]
    BlazoredModalInstance BlazoredModal { get; set; }

    [Parameter]
    public string Message { get; set; }

    private void Yes()
    {
        BlazoredModal.CloseAsync(ModalResult.Ok(true));
    }

    private void No()
    {
        BlazoredModal.CloseAsync(ModalResult.Ok(false));
    }

}