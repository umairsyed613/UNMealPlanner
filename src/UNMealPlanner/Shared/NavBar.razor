@inject IMealService MealService;
@inject IToastService toastService

<nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-icon-top">
    <a class="navbar-brand" href="/">
        <img src="https://img.icons8.com/color/48/000000/bagel.png" width="30" height="30" class="d-inline-block align-top" alt="">
        MealPlanner
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#"><span class="oi oi-home"></span>Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" @onclick="ClearData"><span class="oi oi-trash"></span>Clear All Data</a>
            </li>
        </ul>
    </div>
</nav>

@code {

    public async Task ClearData()
    {
        await MealService.ClearAllData();
        toastService.ShowSuccess("Your Data has been cleared!", "Information");
    }
}
